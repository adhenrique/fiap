@model Cartao

@{
    ViewData["Title"] = "Cadastrar";
}

    <form asp-action="cadastrar" asp-controller="cartao">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataValidade" class="control-label"></label>
                    <input type="date" asp-for="DataValidade" class="form-control" />
                    <span asp-validation-for="DataValidade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Limite" class="control-label"></label>
                    <input asp-for="Limite" class="form-control" />
                    <span asp-validation-for="Limite" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Internacional" /> @Html.DisplayNameFor(model => model.Internacional)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Bandeira" class="control-label"></label>
                    <select asp-for="Bandeira" class="form-control"
                            asp-items="@Html.GetEnumSelectList<Bandeira>()">
                        <option>Selecione</option>
                    </select>
                    <span asp-validation-for="Bandeira" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Cliente.Nome" class="control-label"></label>
                    <input asp-for="Cliente.Nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.Cpf" class="control-label"></label>
                    <input asp-for="Cliente.Cpf" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Cliente.DataNascimento" class="control-label"></label>
                    <input asp-for="Cliente.DataNascimento" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="BancoId" class="control-label">Banco</label>
                    <select asp-for="BancoId" class="form-control" asp-items="ViewBag.bancos">
                        <option>Selecione</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </form>