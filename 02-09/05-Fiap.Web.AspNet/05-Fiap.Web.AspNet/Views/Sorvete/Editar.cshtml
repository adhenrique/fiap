@model Sorvete

@{
    ViewData["Title"] = "Editar";
}

<h2>Cadastro de Sorvete</h2>

<form asp-action="Editar" asp-controller="Sorvete">
    <input asp-for="SorveteId" type="hidden"/>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="Vegano" />
        <label asp-for="Vegano"></label>
    </div>
    <div class="form-group">
        <label asp-for="DataVencimento"></label>
        <input asp-for="DataVencimento" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <select asp-for="Tipo" class="form-control"
                asp-items="@Html.GetEnumSelectList<TipoSorvete>()">
            <option>Selecione</option>
        </select>
    </div>
    <botao texto="Salvar" tipo="submit" />
</form>

