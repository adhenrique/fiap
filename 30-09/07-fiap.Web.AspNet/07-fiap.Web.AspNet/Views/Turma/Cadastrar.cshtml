@model _07_fiap.Web.AspNet.Models.Turma

@{
    ViewData["Title"] = "Cadastrar Turma";
}

    <div class="row">
        <div class="col-6">
            <form asp-action="Cadastrar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Periodo" class="control-label"></label>
                    <select asp-for="Periodo" class="form-control" asp-items="@Html.GetEnumSelectList<Periodo>()">
                        <option value="">Selecione...</option>
                    </select>
                    <span asp-validation-for="Periodo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>