@model  Aluno

@{
    ViewData["Title"] = "Cadastrar Aluno";
}


    <div class="container">
        <div class="row mb-2">
            <div class="col-12">
                <h2>Cadastro</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <form asp-action="Cadastrar">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome</label>
                        <input asp-for="Nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="TurmaId" class="control-label">Turma</label>
                        <select asp-for="TurmaId" class="form-control" asp-items="ViewBag.turmas">
                            <option>Selecione</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Genero" class="control-label">Gênero</label>
                        <select asp-for="Genero" class="form-control" asp-items="@Html.GetEnumSelectList<Genero>()">
                            <option>Selecione</option>
                        </select>
                    </div>
                    <button class="btn btn-primary">Salvar</button>
                </form>
            </div>
        </div>
    </div>